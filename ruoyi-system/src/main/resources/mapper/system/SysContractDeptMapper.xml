<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysContractDeptMapper">
    
    <resultMap type="SysContractDept" id="SysContractDeptResult">
        <result property="contractId"    column="contract_id"    />
        <result property="parentId"    column="parent_id"    />
        <result property="contractDeptName"    column="contract_dept_name"    />
        <result property="orderNum"    column="order_num"    />
        <result property="parentName" column="parent_name" />
    </resultMap>

    <sql id="selectSysContractDeptVo">
        select contract_id, parent_id, contract_dept_name, order_num from sys_contract_dept
    </sql>

    <select id="selectSysContractDeptList" parameterType="SysContractDept" resultMap="SysContractDeptResult">
        <include refid="selectSysContractDeptVo"/>
        <where>  
            <if test="contractDeptName != null  and contractDeptName != ''"> and contract_dept_name like concat('%', #{contractDeptName}, '%')</if>
            <if test="orderNum != null "> and order_num = #{orderNum}</if>
        </where>
        order by parent_id
    </select>
    
    <select id="selectSysContractDeptById" parameterType="Long" resultMap="SysContractDeptResult">
        select t.contract_id, t.parent_id, t.contract_dept_name, t.order_num, p.contract_dept_name as parent_name
        from sys_contract_dept t
        left join sys_contract_dept p on p.contract_id = t.parent_id
        where t.contract_id = #{contractId}
    </select>
        
    <insert id="insertSysContractDept" parameterType="SysContractDept" useGeneratedKeys="true" keyProperty="contractId">
        insert into sys_contract_dept
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="parentId != null">parent_id,</if>
            <if test="contractDeptName != null">contract_dept_name,</if>
            <if test="orderNum != null">order_num,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="parentId != null">#{parentId},</if>
            <if test="contractDeptName != null">#{contractDeptName},</if>
            <if test="orderNum != null">#{orderNum},</if>
         </trim>
    </insert>

    <update id="updateSysContractDept" parameterType="SysContractDept">
        update sys_contract_dept
        <trim prefix="SET" suffixOverrides=",">
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="contractDeptName != null">contract_dept_name = #{contractDeptName},</if>
            <if test="orderNum != null">order_num = #{orderNum},</if>
        </trim>
        where contract_id = #{contractId}
    </update>

    <delete id="deleteSysContractDeptById" parameterType="Long">
        delete from sys_contract_dept where contract_id = #{contractId}
    </delete>

    <delete id="deleteSysContractDeptByIds" parameterType="String">
        delete from sys_contract_dept where contract_id in 
        <foreach item="contractId" collection="array" open="(" separator="," close=")">
            #{contractId}
        </foreach>
    </delete>

</mapper>